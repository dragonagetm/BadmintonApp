<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="#ECECEC">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/darc_purple"
            app:title="Saina Nexwal"
            app:expandedTitleTextAppearance="@style/AppTheme"
            app:collapsedTitleTextColor="@color/white"
            app:expandedTitleTextColor="@color/white"
            app:expandedTitleMarginBottom="50dp"
            app:expandedTitleMarginStart="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="-24dp"
                    app:cardBackgroundColor="#37003C"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        app:srcCompat="@drawable/layer_1_2"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        app:srcCompat="@drawable/layer_2_2"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#66FFFFFF"
                        android:text="@string/indian_badminton_player"
                        android:textStyle="bold"
                        android:layout_gravity="bottom|start"
                        android:layout_marginBottom="27dp"
                        android:layout_marginStart="37dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="88dp"
                        android:layout_gravity="bottom|start"
                        android:layout_marginStart="38dp"
                        app:srcCompat="@drawable/layer_2_1"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="68dp"
                        android:layout_marginBottom="88dp"
                        android:layout_gravity="bottom|start"
                        app:srcCompat="@drawable/layer_3_1"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <androidx.appcompat.widget.Toolbar
                android:layout_height="?attr/actionBarSize"
                android:layout_width="match_parent"
                app:layout_collapseMode="pin"
                android:background="#0000"
                app:navigationIcon="@drawable/vector"
                android:clickable="true"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"
                android:focusable="true" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ECECEC"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
